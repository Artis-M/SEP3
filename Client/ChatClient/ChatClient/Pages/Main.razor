<div class="wholePage">
    <div class="arrange">
        <div class="userProfile">
            <div style="width:300px;margin-bottom: 10px;">
                <h3 class="ProfileText">Profile</h3>
                <div>
                    <h5>@storedUser.Username Username</h5>
                </div>

                <div>
                    <h5>@storedUser. Fname</h5>
                </div>
                <div>
                    <h5>@storedUser.Lname Lname</h5>
                </div>
                <div>
                    <h5>@storedUser.email Email</h5>
                </div>
            </div>


            <div class="buttons">
                <button class="editButton"@onclick="@((() => EditProfile()))">
                    Edit profile
                </button>
                <button class="deleteButton" @onclick="@((() => DeleteProfile()))">
                    Delete profile
                </button>
            </div>


        </div>
        <div class="topicsCard">
            <div>
                <h1>Filter by topic</h1>
            </div>
            <div>
                @if (storedUser.topics == null)
                {
                    <p>You don't have any topics</p>
                }
                else
                {
                    <select class="form-control selectpicker" @onchange="@((arg => FilterChats(arg)))" style="width: 100px">
                        @foreach (var item in storedUser.topics)
                        {
                            <option>@item.name</option>
                        }
                    </select>
                }
            </div>
        </div>
    </div>
    <div class="chatrooms">

        <h1>Your chatrooms</h1>
        <div class="buttons"><button class="editButton" @onclick="@((() => AddChatroom()))">
                         Add chatroom
                     </button></div>

        <div class="chatroomTable">
            @if (Chatrooms == null)
            {
                <p>
                    <em>Loading...</em>
                </p>
            }
            else if (!Chatrooms.Any())
            {
                <p>
                    <em>No chatrooms are in the system.</em>
                </p>
            }
            else
            {
                <table class="table">
                    <tbody>
                    @foreach (var item in Chatrooms)
                    {
                        <tr>
                            <td>
                                <button class="chatroomButton" @onclick="@((() => EnterChatroom(@item._id)))">
                                    @item.name
                                </button>
                            </td>


                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    </div>
    <div class="friends">
        <div>
            <h1>Friends</h1>
        </div>
        <div>

            @if (storedUser.friends == null)
            {
                <p>
                    <em>Loading...</em>
                </p>
            }
            else if (!storedUser.friends.Any())
            {
                <p>
                    <em>No friends, chat and make some!</em>
                </p>
            }
            else
            {
                <table class="table">
                    <tbody>
                    @foreach (var item in storedUser.friends)
                    {
                        <tr>
                            <td>@item.Username</td>
                            <td>
                                <button @onclick="@((() => RemoveFriend(item._id)))">
                                    <i class="oi oi-minus" style="color: black"/>
                                </button>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

